<label>Title</label>
<input type="text" name="title" value= <%= book.title %> >
<label>Author</label>
<select name="author">
  <% authors.forEach(author => { %>
    <% if (author.id === book.author) { %>
    <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
    <% } else { %>
      <option label="<%= author.name %>" value="<%= author.id %>"></option>
    <% } %>
  <% }) %>
</select>
<label>Publish Date</label>
<input type="date" name="publishDate" value= <%= book.publishDate ? book.publishDate.toISOString().split('T')[0] : '' %> >
<label>Page Count</label>
<input type="number" name="pageCount" min="1" value= <%= book.pageCount %> >
<div class="">
  <label>Cover</label>
  <input type="file" name="cover" class="filepond">
</div>
<div class="">
  <label>Description</label>
  <textarea name="description" rows="8" cols="80"><%= book.description %> </textarea>
</div>
